<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="redux.sectionmanager.class">Mozart\Bundle\BackofficeBundle\Redux\SectionManager</parameter>
        <parameter key="mozart.backoffice.redux.section.class">Mozart\Bundle\BackofficeBundle\Redux\Section\MozartSection</parameter>
    </parameters>

    <services>
        <service id="redux.sectionmanager"
                 class="%redux.sectionmanager.class%">
        </service>

        <service id="mozart.backoffice.redux.section"
                 class="%mozart.backoffice.redux.section.class%">
            <tag name="redux.section" />
        </service>
    </services>
</container>
