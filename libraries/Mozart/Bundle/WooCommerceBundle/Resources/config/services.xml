           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="mozart_nucleus.twig.extension.class">Mozart\Bundle\NucleusBundle\Twig\Extension\NucleusExtension</parameter>
    </parameters>

    <services>
        <service id="mozart_nucleus.twig.extension" class="%mozart_nucleus.twig.extension.class%">
            <tag name="twig.extension" />
        </service>
    </services>
</container>
