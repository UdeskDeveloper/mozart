{% if developers %}
    {{ before_widget|raw }}

    {% if title %}
        {{ before_title|raw }}{{ title }}{{ after_title|raw }}
    {% endif %}

    <div class="content">
        {% for developer in developers %}
            <div class="developer clearfix">
                <div class="header">
                    <div class="image">
                        <a href="{{ wp.get_permalink(developer.ID) }}">
                            {% if wp.get_the_post_thumbnail(developer.ID) %}
                                {{ wp.get_the_post_thumbnail(developer.ID, 'post-thumbnail','class=img-thumbnail img-responsive')|raw }}
                            {% else %}
                                <img src="{{ wp.get_template_directory_uri() }}/assets/img/developer-small-tmp.png"
                                     alt="{{ developer.post_title }}" class="img-thumbnail img-responsive">
                            {% endif %}
                        </a>
                    </div>
                    <!-- /.image -->

                    <div class="info">
                        <h2>{{ developer.post_title }}</h2>

                        <div class="properties-count">
                            <span class="number">{{ count_developer_properties(developer.ID) }}</span> {{ 'properties'|translate }}
                        </div>
                        <!-- /.properties-count -->

                        <a href="{{ wp.get_permalink(developer.ID) }}" class="btn">{{ 'View profile'|translate }}</a>
                    </div>
                    <!-- /.info -->
                </div>
                <!-- /.header -->

                {% if wp.get_post_meta(developer.ID, '_developer_address', true) %}
                    <div class="address">
                        {{ wp.get_post_meta(developer.ID, '_developer_address', true)|nl2br }}
                    </div><!-- /.address -->
                {% endif %}

                {% if wp.get_post_meta(developer.ID, '_developer_email', true) %}
                    <div class="email">
                        <a href="mailto:{{ wp.get_post_meta(developer.ID, '_developer_email', true) }}">{{ wp.get_post_meta(developer.ID, '_developer_email', true) }}</a>
                    </div><!-- /.email -->
                {% endif %}

                {% if wp.get_post_meta(developer.ID, '_developer_phone', true) %}
                    <div class="phone">
                        {{ wp.get_post_meta(developer.ID, '_developer_phone', true) }}
                    </div><!-- /.phone -->
                {% endif %}

                {% if wp.get_post_meta(developer.ID, '_developer_url', true) %}
                    <div class="url">
                        <a href="{{ wp.get_post_meta(developer.ID, '_developer_url', true) }}">{{ wp.get_post_meta(developer.ID, '_developer_url', true) }}</a>
                    </div>
                {% endif %}
            </div><!-- /.developer -->
        {% endfor %}
    </div><!-- /.content -->

    {{ after_widget|raw }}
{% endif %}
