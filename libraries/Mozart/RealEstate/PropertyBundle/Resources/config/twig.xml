    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="realestate.property.twig.extension.class">Mozart\RealEstate\PropertyBundle\Twig\PropertyExtension</parameter>
    </parameters>

    <services>
        <service id="realestate.property.twig.extension"
