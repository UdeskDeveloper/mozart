{% if amenities %}
    <h2>{{ 'General amenities'|translate }}</h2>

    <div class="row">
        {% for column in amenities %}
            <ul class="col-xs-4">
                {% for amenity in column %}
                    <li class="{% if wp.has_term(amenity.term_id, 'amenities', post.ID) %}checked{% else %}plain{% endif %}">{{ amenity.name }}</li>
                    {% endfor %}
            </ul><!-- /.col-xs-2 -->
        {% endfor %}
    </div><!-- /.row -->
{% endif %}
