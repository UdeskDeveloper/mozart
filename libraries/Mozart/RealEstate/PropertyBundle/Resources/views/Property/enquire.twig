{{ before_widget|raw }}

{% if title %}
    {{ before_title|raw }}{{ title }}{{ after_title|raw }}
{% endif %}

<div class="content">
    <form method="post" action="{{ wp.get_template_directory_uri() }}/headquarters/src/Rhetina/Property/enquire.php">

        {% if not wp.r_get_config('property', 'fields', 'hide_name') %}
            <div class="control-group">
                <label class="control-label" for="inputName">
                    {{ 'Name'|translate }}
                    <span class="form-required" title="This field is required.">*</span>
                </label>

                <div class="controls">
                    <input type="text" id="inputName" name="name" required="required">
                </div><!-- /.controls -->
            </div><!-- /.control-group -->
        {% endif %}

        {% if not wp.r_get_config('property', 'fields', 'hide_phone') %}
            <div class="control-group">
                <label class="control-label" for="inputPhone">
                    {{ 'Phone'|translate }}
                    <span class="form-required" title="This field is required.">*</span>
                </label>

                <div class="controls">
                    <input type="text" id="inputPhone" name="phone" required="required">
                </div><!-- /.controls -->
            </div><!-- /.control-group -->
        {% endif %}

        {% if not wp.r_get_config('property', 'fields', 'hide_date') %}
            <div class="control-group">
                <label class="control-label" for="inputDate">
                    {{ 'Date'|translate }}
                    <span class="form-required" title="This field is required.">*</span>
                </label>

                <div class="controls">
                    <input type="date" id="inputDate" name="date" required="required">
                </div>
                <!-- /.controls -->
            </div><!-- /.control-group -->
        {% endif %}

        {% if not wp.r_get_config('property', 'fields', 'hide_date_from') %}
            <div class="control-group">
                <label class="control-label" for="inputDate">
                    {{ 'Date From'|translate }}
                </label>

                <div class="controls">
                    <input type="date" id="inputDate" name="date_from">
                </div>
                <!-- /.controls -->
            </div><!-- /.control-group -->
        {% endif %}

        {% if not wp.r_get_config('property', 'fields', 'hide_date_to') %}
            <div class="control-group">
                <label class="control-label" for="inputDate">
                    {{ 'Date To'|translate }}
                </label>

                <div class="controls">
                    <input type="date" id="inputDate" name="date_to" >
                </div>
                <!-- /.controls -->
            </div><!-- /.control-group -->
        {% endif %}

        {% if not wp.r_get_config('property', 'fields', 'hide_email') %}
            <div class="control-group">
                <label class="control-label" for="inputEmail">
                    {{ 'Email'|translate }}
                    <span class="form-required" title="This field is required.">*</span>
                </label>

                <div class="controls">
                    <input type="email" id="inputEmail" name="email" required="required">
                </div>
                <!-- /.controls -->
            </div><!-- /.control-group -->
        {% endif %}

        {% if not wp.r_get_config('property', 'fields', 'hide_message') %}
            <div class="control-group">
                <label class="control-label" for="inputMessage">
                    {{ 'Message'|translate }}
                    <span class="form-required" title="This field is required.">*</span>
                </label>

                <div class="controls">
                    <textarea id="inputMessage" name="message" required="required"></textarea>
                </div>
                <!-- /.controls -->
            </div><!-- /.control-group -->
        {% endif %}

        <div class="form-actions">
            <input type="hidden" name="post_id" value="{{ post_id }}">
            <button class="btn btn-primary arrow-right">{{ 'Send'|translate }}</button>
        </div>
        <!-- /.form-actions -->
    </form>
</div><!-- /.content -->

{{ after_widget|raw }}
