{% spaceless %}
    <div class="infobox clearfix">
        <div class="close">
            <img src="{{ wp.get_template_directory_uri() }}/assets/img/close.png" alt="">
        </div>

        <div class="image">
            <a href="{{ wp.get_permalink(property.ID) }}">
                {% if wp.get_the_post_thumbnail(property.ID) %}
                    {# you should add  | imagine_filter('infobox_widen') in the future to this  #}
                    <img src="{{ wp.wp_get_attachment_url(wp.get_post_thumbnail_id(property.ID)) }}" alt="{{ property.post_title }}">
                {% else %}
                    <img src="{{ wp.get_template_directory_uri() }}/assets/img/property-tmp-small.png" alt="{{ property.post_title }}" width="130">
                {% endif %}
            </a>
            {% if property.meta._property_contract_type.0 is defined %}
                {% set contracts = wp.wp_get_post_terms(property.ID, 'property_contracts') %}
                    {% if contracts[0] is defined %}
                        <div class="contract-type">
                            {{ contracts[0].name }}
                        </div>
                    {% endif %}
                    {% endif %}
                    </div>

                    <div class="info">
                        <div class="title">
                            <a href="{{ wp.get_permalink(property.ID) }}">{% if property.meta._property_title.0 is defined %}{{ property.meta._property_title.0 }}{% else %}{{ property.post_title }}{% endif %}</a>
                        </div>

                        <div class="location">{% if property.location[0].name is defined %}{{ property.location[0].name }}{% endif %}</div>

                        <div class="property-info clearfix">
                            {% if property.meta._property_area[0] is defined %}
                                <div class="area"><i class="icon icon-normal-cursor-scale-up"></i>{{ property.meta._property_area.0 }}{{ wp.parameter('property', 'units', 'area')|raw }}</div>
                                {% endif %}

                            {% if property.meta._property is defined %}
                                {% if property.meta._property.hide_beds.0 != 1 %}
                                    {% if property.meta._property_bedrooms.0 is defined %}
                                        <div class="bedrooms"><i class="icon icon-normal-bed"></i>
                                            {{ property.meta._property_bedrooms.0 }}
                                        </div>
                                    {% endif %}
                                {% endif %}

                                {% if property.meta._property.hide_baths.0 != 1 %}
                                    {% if property.meta._property_bathrooms.0 %}
                                        <div class="bathrooms"><i class="icon icon-normal-shower"></i>
                                            {{ property.meta._property_bathrooms.0 }}</div>
                                        {% endif %}
                                    {% endif %}
                                {% endif %}

                        </div>

                        <div class="price">{% if property.meta._property_custom_text.0 is defined %}{{ property.meta._property_custom_text.0 }}{% else %}{{ property.meta._property_price.0|price_format }}{% if property.meta._property_price_suffix.0 is defined %}<span class="suffix">{{ property.meta._property_price_suffix.0 }}</span>{% endif %}{% endif %}</div>

                        <div class="link">
                            <a href="{{ wp.get_permalink(property.ID) }}">{{ 'View more'|translate }}</a>
                        </div>
                    </div>
                </div>
                {% endspaceless %}
