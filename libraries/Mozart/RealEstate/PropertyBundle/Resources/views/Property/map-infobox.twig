{% spaceless %}
<div class="infobox clearfix">
    <div class="close">
        <img src="{{ wp.get_template_directory_uri() }}/Resources/public/img/close.png" alt="">
    </div>

    <div class="image">
        <a href="{{ wp.get_permalink(property.ID) }}">
{% if wp.get_the_post_thumbnail(property.ID) %}
            <img src="{{ wp.aq_resize(wp.wp_get_attachment_url(wp.get_post_thumbnail_id(property.ID)), 130)|raw }}" alt="{{ property.post_title }}">
{% else %}
            <img src="{{ wp.get_template_directory_uri() }}/Resources/public/img/property-tmp-small.png" alt="{{ property.post_title }}" width="130">
{% endif %}
        </a>
            {% if property.meta._property_contract_type.0 %}

                {% if wp.wp_get_post_terms(post.ID, 'property_contracts').0 %}
        <div class="contract-type">
                        {{ wp.wp_get_post_terms(post.ID, 'property_contracts').0.name }}
        </div>
                {% endif %}
            {% endif %}
    </div>

    <div class="info">
        <div class="title">
            <a href="{{ wp.get_permalink(property.ID) }}">{% if property.meta._property_title.0 %}{{ property.meta._property_title.0 }}{% else %}{{ property.post_title }}{% endif %}</a>
        </div>

        <div class="location">{{ property.location.0.name }}</div>

        <div class="property-info clearfix">
                {% if property.meta._property_area.0 %}
            <div class="area"><i class="icon icon-normal-cursor-scale-up"></i>{{ property.meta._property_area.0 }}{{ wp.r_get_config('property', 'units', 'area')|raw }}</div>
                {% endif %}

                {% if property.meta._property.hide_beds.0 != 1 %}
                    {% if property.meta._property_bedrooms.0 %}
            <div class="bedrooms"><i class="icon icon-normal-bed"></i>{{ property.meta._property_bedrooms.0 }}</div>
                    {% endif %}
                {% endif %}

                {% if property.meta._property.hide_baths.0 != 1 %}
                    {% if property.meta._property_bathrooms.0 %}<div class="bathrooms"><i class="icon icon-normal-shower"></i>{{ property.meta._property_bathrooms.0 }}</div>{% endif %}
                {% endif %}
        </div>

        <div class="price">{% if property.meta._property_custom_text.0 %}{{ property.meta._property_custom_text.0 }}{% else %}{{ property.meta._property_price.0|price_format }}{% if property.meta._property_price_suffix.0 %} <span class="suffix">{{ property.meta._property_price_suffix.0 }}</span>{% endif %}{% endif %}</div>

        <div class="link">
            <a href="{{ wp.get_permalink(property.ID) }}">{{ 'View more'|translate }}</a>
        </div>
    </div>
</div>
{% endspaceless %}
