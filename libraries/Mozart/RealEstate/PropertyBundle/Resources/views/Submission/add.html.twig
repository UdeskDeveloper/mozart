{% if title is defined %}
    <div class="page-header">
        <h1>{{ title }}</h1>
    </div>
{% endif %}

{% include '@twigs/sections/progress.html.twig' %}

<form method="post" action="" enctype="multipart/form-data" class="submission-form form-vertical">
    {{ nonce|raw }}
    <input type="hidden" name="moz-action" value="mozart-user-property-submit" />
    {% if post is defined %}
        <input type="hidden" name="property-id" value="{{ post.ID }}" />
    {% endif %}
    <div class="row">
        {{ form.content|raw }}

        <div class="col-xs-12 col-sm-4 form-column">
            <div class="form-column-inner">
                {{ form.metabox._setup() }}
            </div>
        </div>
    </div>

    <div class="form-actions mtl text-center">
        <button type="submit" name="submit-for-review" class="btn btn-success btn-lg prl pll"
                ><i class="mozicon-stack mrm"></i>{{ 'Submit for Review'|translate }}</button>
        <button type="submit" name="save-draft" class="btn btn-default btn-lg prl pll"
                ><i class="mozicon-copy mrm"></i>{{ 'Save as Draft'|translate }}</button>
    </div>
</form>
