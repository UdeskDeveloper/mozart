{{ before_widget|raw }}

{% if title %}
    {{ before_title|raw }}{{ title }}{{ after_title|raw }}
{% endif %}

{% if partners %}
    <div class="partners">
        <div class="row">
            {% for partner in partners %}
                <div class="col-xs-3">
                    <div class="partner">
                        <a href="{{ wp.get_post_meta(partner.ID, '_partner_url', true) }}">
                            {{ wp.get_the_post_thumbnail(partner.ID)|raw }}
                        </a>
                    </div>
                </div><!-- /.col-xs-3 -->
            {% endfor %}
        </div><!-- /.row -->
    </div><!-- /.partners -->
{% endif %}
{{ after_widget|raw }}
