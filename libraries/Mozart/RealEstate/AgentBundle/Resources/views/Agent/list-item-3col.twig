<div class="agent col-xs-3">
    <div class="image">
        <a href="{{ wp.get_permalink(agent.ID) }}">
            {% if wp.get_the_post_thumbnail(agent.ID) %}
                {{ wp.get_the_post_thumbnail(agent.ID)|raw }}
            {% else %}
                <img src="{{ wp.get_template_directory_uri() }}/headquarters/Resources/public/img/agent-tmp.png" alt="{{ property.post_title }}">
            {% endif %}
        </a>
    </div><!-- /.image -->

    <div class="body">
        <h3>
            <a href="{{ wp.get_permalink(agent.ID) }}">{{ agent.post_title }}</a>
        </h3>

    </div><!-- /.body -->

    <div class="info">
        <div class="box">
            <div class="phone">
                <i class="icon icon-normal-mobile-phone"></i>
                {{ agent.meta._agent_mobile.0 }}
            </div><!-- /.phone -->
            <div class="office">
                <i class="icon icon-normal-phone"></i>
                {{ agent.meta._agent_phone.0 }}
            </div><!-- /.office -->

            <div class="email">
                <i class="icon icon-normal-mail"></i>
                <a href="mailto:{{ agent.meta._agent_email.0 }}">
                    {{ agent.meta._agent_email.0 }}
                </a>
            </div><!-- /.email -->
        </div><!-- /.box -->
    </div><!-- /.info -->
</div><!-- /.agent -->
