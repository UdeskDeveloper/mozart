{% extends '@twigs/layouts/base.html.twig' %}

{% block content %}
    {% if not title %}
        <h1 class="page-header">{{ 'Agents'|translate }}</h1>
    {% else %}
        <h1 class="page-header">{{ title }}</h1>
    {% endif %}

    {% if wp.r_get_config('property', 'properties', 'display_sort_bar') %}
        <div class="clearfix">
            {% include 'agent/sort.twig' %}
        </div>
    {% endif %}

    {% if wp_query.posts|length > 0 %}
        {{ wp_query.the_post() }}
        <div class="our-agents-large">
            <div class="row-fluid">
                {% for agent in agents %}
                    {% include 'agent/list-item-3col.twig' %}
                    {% if loop.index % 4  == 0 %}
                        </div><div class="row-fluid">
                    {% endif %}
                {% endfor %}
            </div>
        </div><!-- /.our-agents-large -->
        {{ im_paging_nav() }}
    {% else %}
        <div class="row-fluid">
            {{ wp.get_template_part('content', 'none') }}
        </div>
    {% endif %}
{% endblock %}
