{% if agencies %}
    {{ before_widget|raw }}

    {% if title %}
        {{ before_title|raw }}{{ title }}{{ after_title|raw }}
    {% endif %}

    <div class="content">
        {% for agency in agencies %}
            <div class="agency clearfix">
                <div class="header">
                    <div class="image">
                        <a href="{{ wp.get_permalink(agency.ID) }}">
                            {% if wp.get_the_post_thumbnail(agency.ID) %}
                                {{ wp.get_the_post_thumbnail(agency.ID, 'post-thumbnail','class=img-thumbnail img-responsive')|raw }}
                            {% else %}
                                <img src="{{ wp.get_template_directory_uri() }}/assets/img/agency-small-tmp.png"
                                     alt="{{ agency.post_title }}" class="img-thumbnail img-responsive">
                            {% endif %}
                        </a>
                    </div>
                    <!-- /.image -->

                    <div class="info">
                        <h2>{{ agency.post_title }}</h2>

                        <div class="properties-count">
                            <span class="number">{{ count_agency_properties(agency.ID) }}</span> {{ 'properties'|translate }}
                        </div>
                        <!-- /.properties-count -->

                        <a href="{{ wp.get_permalink(agency.ID) }}" class="btn">{{ 'View profile'|translate }}</a>
                    </div>
                    <!-- /.info -->
                </div>
                <!-- /.header -->

                {% if wp.get_post_meta(agency.ID, '_agency_address', true) %}
                    <div class="address">
                        {{ wp.get_post_meta(agency.ID, '_agency_address', true)|nl2br }}
                    </div><!-- /.address -->
                {% endif %}

                {% if wp.get_post_meta(agency.ID, '_agency_email', true) %}
                    <div class="email">
                        <a href="mailto:{{ wp.get_post_meta(agency.ID, '_agency_email', true) }}">{{ wp.get_post_meta(agency.ID, '_agency_email', true) }}</a>
                    </div><!-- /.email -->
                {% endif %}

                {% if wp.get_post_meta(agency.ID, '_agency_phone', true) %}
                    <div class="phone">
                        {{ wp.get_post_meta(agency.ID, '_agency_phone', true) }}
                    </div><!-- /.phone -->
                {% endif %}

                {% if wp.get_post_meta(agency.ID, '_agency_url', true) %}
                    <div class="url">
                        <a href="{{ wp.get_post_meta(agency.ID, '_agency_url', true) }}">{{ wp.get_post_meta(agency.ID, '_agency_url', true) }}</a>
                    </div>
                {% endif %}
            </div><!-- /.agency -->
        {% endfor %}
    </div><!-- /.content -->

    {{ after_widget|raw }}
{% endif %}
